.breadcrumbs.text-sm.mb-5
  %ul
    %li
      = link_to "Summary", root_path
    %li
      = "Disbursements for #{@year}"

%h1.text-3xl.mb-5.text-primary.font-bold
  = "Disbursements for #{@year}"

%table.table.table-zebra
  %thead
    %tr
      %th Date
      %th Amount
      %th Commission fee
      %th Merchant
  %tbody
    - @disbursements.each do |disbursement|
      %tr
        %td= disbursement.as_of_date
        %td= disbursement.amount.format
        %td= disbursement.commission_fee.format
        %td= disbursement.merchant.reference
